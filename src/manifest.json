{
  "manifest_version": 2,

  "name": "Fussy",
  "description": "Make facebook less fussy",
  "version": "1.0.1",
  "background": { "scripts": ["background.js"] },
  "content_scripts": [ 
    { 
      "matches": ["https://*.facebook.com/*"], 
      "css": ["fb.css"] 
    }
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "page_action": {
    "default_icon": {  
      "19": "icon.png", 
      "38": "icon@2x.png"  
    },
    "default_title": "Fussy"
  }
}